<!-- rectangle_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid color for the shape -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: Stroke (border) around the shape -->
    <stroke
        android:width="2dp"
        android:color="#E1E8EF" />

    <!-- Optional: Padding inside the shape -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />
</shape>
